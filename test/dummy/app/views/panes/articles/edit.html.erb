<h1>Edit article</h1>

<%= form_with model: @article, url: panes_article_path(@article.id) do |form| %>
  <%= render "shared/errors", resource: @article %>

  <%= form.label :body %>
  <%= form.text_area :body %>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to "Delete", panes_article_path(@article.id), data: { turbo_method: :delete } %>
