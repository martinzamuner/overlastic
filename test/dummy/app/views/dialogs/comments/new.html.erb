<% content_for :overlay_title, "New Comment" %>

<%= form_with model: @comment, url: dialogs_article_comments_path(@comment.article) do |form| %>
  <%= render "shared/errors", resource: @comment %>

  <%= form.label :body %>
  <%= form.text_area :body %>

  <p>
    <%= form.submit %>
  </p>
<% end %>
