<h1>Edit Comment</h1>

<%= form_with model: @comment, url: dialogs_article_comment_path(@comment.article, @comment) do |form| %>
  <%= render "shared/errors", resource: @comment %>

  <%= form.label :body %>
  <%= form.text_area :body %>

  <p>
    <%= form.submit %>
  </p>
<% end %>

<%= link_to "Delete", dialogs_article_comment_path(@comment.article, @comment), data: { turbo_method: :delete } %>
